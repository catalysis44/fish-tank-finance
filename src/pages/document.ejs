<!doctype html>
<html lang="en">
<head>
  <meta
      name="viewport"
      content="width=device-width, initial-scale=1, maximum-scale=1, minimum-scale=1, user-scalable=no"
    />
  <meta charset="utf-8" />
  <style>
    @keyframes loading {
      from {
        width: 0%;
      }

      to {
        width: 99%;
      }
    }
    @keyframes blink {
        50% {
            opacity: 0.0;
        }
    }

    #progress {
      position: absolute;
      top: 0px;
      left: 0px;
      width: 100%;
      height: 100%;
      z-index: 100000;
      background-color: #00a99d;
      padding:20px;
    }
    #progress .logo {
      position: relative;
      top: calc(50vh - 150px);
      border-width: 0px;
      max-width:192px !important;
      margin:0 auto;
      text-align: center;
      margin-bottom:20px;
    }

    #progress .bordered
    {
        position:absolute;
    }
    #progress .loading-text
    {
        position:absolute;
        color:black;
        font-size:18px;
        width:100%;
        text-align: center;
        top:12px;
        animation: blink 1s step-start 0s infinite;
    }


    #progress .progress-bar-container {
      position: relative;
      top: calc(50vh - 140px);
      height: 14px;
      margin: auto;
      border-width: 0px;
      max-width:192px !important;
      margin:0 auto;
      text-align: center;
    }

    #progress .progress-bar {
      /* animation: loading 60s; */
      background: white;
      min-width: 10px;
      height:48px;
    }

    #progress .progress-bar.loading {
      animation: loading 60s;
    }

    #progress .progress-bar.full {
      width: 100% !important;
    }

    #progress .loading-tip {
      position: relative;
      top: calc(50vh - 50px);
      color: white;
      text-align: center;
      font-size: 20px;

    }

   
  </style>

  <!-- Global site tag (gtag.js) - Google Analytics -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=G-B5MN4P5G98"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());

    gtag('config', 'G-B5MN4P5G98');
  </script>

</head>

<body>
  <div id="root"></div>
  <div id="progress"></div>
  <script>
    document.getElementById('progress').innerHTML = `
        <div class="logo"><img src="logo_loading.png" /></div>
        <div class="progress progress-bar-container">
          <div  class="bordered">
            <img id="bordered_image" src="border_loading.png" />
          </div>
          <div class="loading-text">
            Loading...
            </div>
          <div class="progress-bar loading">
            
          </div>
        </div>
        <div class="loading-tip">
          If you're using it for the first time, it might take a few minutes...
        </div>
      `;
    let bordered_image = document.getElementById('bordered_image');
    let bar = document.querySelector('#progress .progress-bar');
    bar.style.display = 'none';
    bordered_image.onload = function(){
      bar.style.display = 'block';
    }
    window.onload = function () {
      let bar = document.querySelector('#progress .progress-bar');
      bar.classList.remove('loading');
      bar.classList.add('full');
      if (document.getElementById('progress')) {
          document.body.removeChild(document.getElementById('progress'));
      }
    }
  </script>
</body>

</html>
